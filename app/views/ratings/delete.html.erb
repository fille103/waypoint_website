<%= link_to("<< Back to List", {:action => 'index', :registered_user_id => @registered_user.id}, :class => 'back-link') %>

<div class="ratings delete">
    <h2>Confirm Deletion</h2>

    <table summary="Rating detail view">
        <tr>
            <th>ID</th>
            <td><%= @rating.id %></td>
        </tr>
        <tr>
            <th>Rating</th>
            <td><%= @rating.rating %></td>
        </tr>
        <tr>
            <th>Registered User ID</th>
            <td><%= @rating.registered_user_id %></td>
        </tr>
        <tr>
            <th>Version ID</th>
            <td><%= @rating.version_id %></td>
        </tr>
    </table>

    <%= form_for(:rating, :url => {:action => 'destroy', :id => @rating.id, :registered_user_id => @registered_user.id}) do |f| %>

    <div class="form-buttons">
        <%= submit_tag("Delete Rating") %>
    </div>

    <% end %>

</div>
