<%= link_to("<< Back to Registered Users", {:controller => 'registered_users', :action => 'index'}, :class => 'back-link') %>

<% @page_title = "Feedback" %>

<div class="feedback index">
    <h2>Feedback</h2>
        <%=  %>

        <%= link_to(image_tag('plus_sign.png', :size=>'11x11', :alt => '+') + " Add New Feedback", {:action => 'new', :registered_user_id => @registered_user.id}, :class => 'action new') %>

    <table class="listing" summary="Feedback">
        <tr class="header">
            <th>ID</th>
            <th>Feedback</th>
            <th>Registered User ID</th>
            <th>Actions</th>
        </tr>
        <% @feedbacks.each do |feedback| %>
        <tr>
            <td><%= feedback.id %></td>
            <td><%= feedback.feedback %></td>
            <td><%= feedback.registered_user_id %></td>
            <td class="actions">
                <%= link_to("Show", {:action => 'show' , :id => feedback.id, :registered_user_id => @registered_user.id},  :class => 'action show') %>
                <%= link_to("Edit",{:action => 'edit' , :id => feedback.id, :registered_user_id => @registered_user.id}, :class => 'action edit') %>
                <%= link_to("Delete", {:action => 'delete', :id => feedback.id, :registered_user_id => @registered_user.id}, :class => 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
