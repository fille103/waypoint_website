<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="admins delete">
    <h2>Confirm Deletion</h2>

    <table summary="Admin detail view">
        <tr>
            <th>ID</th>
            <td><%= @admin.id %></td>
        </tr>
        <tr>
            <th>Username</th>
            <td><%= @admin.username %></td>
        </tr>
        <tr>
            <th>Encrypted Password</th>
            <td><%= @admin.password_digest %></td>
        </tr>
        <tr>
            <th>Email</th>
            <td><%= @admin.email %></td>
        </tr>
    </table>

    <%= form_for(:admin, :url => {:action => 'destroy', :id => @admin.id}) do |f| %>

    <div class="form-buttons">
        <%= submit_tag("Delete Admin") %>
    </div>

    <% end %>

</div>
