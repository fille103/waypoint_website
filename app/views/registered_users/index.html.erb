<%= link_to("<< Back to Menu", {:controller => 'access'}, :class => 'back-link') %>

<% @page_title = "RegisteredUsers" %>

<div class="registered_users index">
    <h2>Registered Users</h2>
        <%=  %>

        <%= link_to(image_tag('plus_sign.png', :size=>'11x11', :alt => '+') + " Add New Registered User", {:action => 'new'}, :class => 'action new') %>

    <table class="listing" summary="Registered users">
        <tr class="header">
            <th>ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Subscribed</th>
            <th>Actions</th>
        </tr>
        <% @registered_users.each do |registered_user| %>
        <tr>
            <td><%= registered_user.id %></td>
            <td><%= registered_user.username %></td>
            <td><%= registered_user.password %></td>
            <td><%= registered_user.email %></td>
            <td><%= registered_user.subscribed %></td>
            <td class="actions">
                <%= link_to("Feedback", {:controller => 'feedbacks', :registered_user_id => registered_user.id},  :class => 'action index') %>
                <%= link_to("Rating", {:controller => 'ratings', :registered_user_id => registered_user.id},  :class => 'action index') %>
                <%= link_to("Show", {:action => 'show' , :id => registered_user.id},  :class => 'action show') %>
                <%= link_to("Edit",{:action => 'edit' , :id => registered_user.id}, :class => 'action edit') %>
                <%= link_to("Delete", {:action => 'delete', :id => registered_user.id}, :class => 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
